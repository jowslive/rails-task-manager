<%= simple_form_for(task) do |f| %>
  <div class="form-group col-md-3">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group col-md-3">
    <%= f.label :details %>
    <%= f.text_field :details, class: "form-control" %>
  </div>
  <div class="form-group col-md-3">
    <%= f.label :task %>
    <%= f.input :completed, :as => :boolean, class: "form-control" %>
  </div>
  
  <%= link_to "Cancel", tasks_path , class: "btn btn-danger rounded ml-3" %>
  <%= f.submit class: "btn btn-primary rounded ml-3" %>
<% end %>